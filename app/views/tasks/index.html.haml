.main
  .errors
  .tasks
    %h1 All Tasks
    - @tasks.each do |task|
      .task
        .task-header
          %h1= "Task: #{task.name}"
          %p= "Created by #{task.owner}"
        .task-body
          %p= "Deadline: #{task.deadline}"
          %p= "Priority: #{task.priority}"
  .add-task
    %h1 Add Task
    = simple_form_for @task do |task|
      = task.input :name, input_html: { required: "" }
      = task.input :email
      = task.input :owner
      = task.input :priority, as: :radio_buttons
      = task.input :private, checked_value: false, unchecked_value: true
      = task.input :deadline
      = task.button :submit
